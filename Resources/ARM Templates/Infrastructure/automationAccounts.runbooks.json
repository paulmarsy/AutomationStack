{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "runbookSasToken": {
            "type": "securestring"
        },
        "runbooks": {
            "type": "array"
        }
    },
    "variables": {
        "runbookBaseUri": "[concat('https://stackresources',resourceGroup().tags.udp,'.blob.core.windows.net/')]",
        "automationName": "[concat('automation-', resourceGroup().tags.udp)]"
    },
    "resources": [{
        "copy": {
            "name": "AutomationRunbookImport",
            "count": "[length(parameters('runbooks'))]"
        },
        "name": "[concat(variables('automationName'), '/', parameters('runbooks')[copyIndex()])]",
        "apiVersion": "2015-10-31",
        "tags": "[resourceGroup().tags]",
        "type": "Microsoft.Automation/automationAccounts/runbooks",
        "location": "West Europe",
        "properties": {
            "runbookType": "PowerShell",
            "logProgress": true,
            "logVerbose": true,
            "state": "Published",
            "publishContentLink": {
                "uri": "[concat(uri(variables('runbookBaseUri'), concat('/runbooks/', parameters('runbooks')[copyIndex()], '.json')), parameters('runbookSasToken'))]"
            }
        }
    }]
}
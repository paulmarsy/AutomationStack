{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "octopusAutomationCredentialUsername": {
            "type": "securestring"
        },
        "octopusAutomationCredentialPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "automationName": "[concat('automation-', resourceGroup().tags.udp)]"
    },
    "resources": [{
        "name": "[concat(variables('automationName'), '/', 'OctopusDeployServiceAccount')]",
        "type": "Microsoft.Automation/automationAccounts/credentials",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "userName": "[parameters('octopusAutomationCredentialUsername')]",
            "password": "[parameters('octopusAutomationCredentialPassword')]"
        }
    }, {
        "name": "[concat(variables('automationName'), '/', 'xNetworking')]",
        "type": "Microsoft.Automation/automationAccounts/modules",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "contentLink": {
                "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/xnetworking.3.2.0.nupkg"
            }
        }
    }, {
        "name": "[concat(variables('automationName'), '/', 'xPSDesiredStateConfiguration')]",
        "type": "Microsoft.Automation/automationAccounts/modules",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "contentLink": {
                "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/xpsdesiredstateconfiguration.6.0.0.nupkg"
            }
        }
    }, {
        "name": "[concat(variables('automationName'), '/', 'PackageManagementProviderResource')]",
        "type": "Microsoft.Automation/automationAccounts/modules",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "contentLink": {
                "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/packagemanagementproviderresource.1.0.3.nupkg"
            }
        }
    }, {
        "name": "[concat(variables('automationName'), '/', 'xSystemSecurity')]",
        "type": "Microsoft.Automation/automationAccounts/modules",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "contentLink": {
                "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/xsystemsecurity.1.2.0.nupkg"
            }
        }
    }]
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "udp": {
            "type": "string"
        },
        "configurationContent": {
            "type": "string"
        },
        "jobId": {
            "type": "string"
        },
        "configurationName": {
            "type": "string"
        },
        "configurationData": {
            "type": "string"
        },
        "octopusNodeName": {
            "type": "string"
        },
        "connectionString": {
            "type": "string"
        },
        "hostHeader": {
            "type": "string"
        },
        "fullyQualifiedUrl": {
            "type": "string"
        },
        "octopusVersionToInstall": {
            "type": "string"
        }
    },
    "variables": {
        "automationName": "[concat('automation-', parameters('udp'))]"
    },
    "resources": [{
        "name": "[concat(variables('automationName'), '/', parameters('configurationName'))]",
        "type": "Microsoft.Automation/automationAccounts/configurations",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "properties": {
            "description": "[concat('DSC Configuration ', parameters('configurationName'))]",
            "logVerbose": true,
            "state": "Published",
            "overwrite":true,
            "source":{
         "type":"embeddedContent",
         "value":"[parameters('configurationContent')]"
      }
        }
    }, {
        "name": "[concat(variables('automationName'), '/', parameters('jobId'))]",
        "type": "Microsoft.Automation/automationAccounts/compilationjobs",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-10-31",
        "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationName'),'/Configurations/', parameters('configurationName'))]"
        ],
        "properties": {
            "configuration": {
                "name": "[parameters('configurationName')]"
            },
            "parameters": {
                "ConfigurationData": "[parameters('configurationData')]",
                "OctopusNodeName": "[parameters('octopusNodeName')]",
                "ConnectionString": "[parameters('connectionString')]",
                "HostHeader": "[parameters('hostHeader')]",
                "FullyQualifiedUrl": "[parameters('fullyQualifiedUrl')]",
                "OctopusVersionToInstall": "[parameters('octopusVersionToInstall')]"
            }
        }
    }]
}
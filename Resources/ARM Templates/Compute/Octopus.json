{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "udp": {
            "type": "string"
        },
        "vmAdminUsername": {
            "type": "string"
        },
        "vmAdminPassword": {
            "type": "securestring"
        },
        "clientID": {
            "type": "string"
        },
        "clientSecret": {
            "type": "securestring"
        },
        "registrationKey": {
            "type": "securestring"
        },
        "registrationUrl": {
            "type": "string"
        },
        "nodeConfigurationName": {
            "type": "string"
        },
        "timestamp": {
            "type": "string"
        },
        "computeVmShutdownStatus": {
            "type": "string"
        },
        "computeVmShutdownTime": {
            "type": "string"
        }
    },
    "variables": {
        "name": "Octopus",
        "vmName": "[concat(variables('name'),'VM')]"
    },
    "resources": [{
        "apiVersion": "2016-09-01",
        "name": "[concat(variables('name'), 'Networking')]",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'networking/public.json')]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "name": {
                    "value": "[variables('name')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "[concat(variables('name'), 'SqlDatabase')]",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "[concat('Microsoft.Resources/deployments/', variables('name'), 'Networking')]"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'sqlServer/databases.json')]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "name": {
                    "value": "[variables('name')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "[concat(variables('name'), 'VirtualMachine')]",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "[concat('Microsoft.Resources/deployments/', variables('name'), 'Networking')]"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'virtualMachines/WindowsServer2016.json')]"
            },
            "parameters": {
                "name": {
                    "value": "[variables('name')]"
                },
                "vmAdminUsername": {
                    "value": "[parameters('vmAdminUsername')]"
                },
                "vmAdminPassword": {
                    "value": "[parameters('vmAdminPassword')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "[concat(variables('name'), 'Extensions/AzureDiskEncryption')]",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "[concat('Microsoft.Resources/deployments/', variables('name'), 'VirtualMachine')]"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'extensions/AzureDiskEncryption.json')]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "vmName": {
                    "value": "[variables('vmName')]"
                },
                "clientID": {
                    "value": "[parameters('clientID')]"
                },
                "clientSecret": {
                    "value": "[parameters('clientSecret')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "[concat(variables('name'), 'Extensions/Microsoft.Powershell.DSC')]",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "[concat('Microsoft.Resources/deployments/', variables('name'), 'VirtualMachine')]"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'extensions/Microsoft.Powershell.DSC.json')]"
            },
            "parameters": {
                "vmName": {
                    "value": "[variables('vmName')]"
                },
                "registrationKey": {
                    "value": "[parameters('registrationKey')]"
                },
                "registrationUrl": {
                    "value": "[parameters('registrationUrl')]"
                }
            }
        }
    }]
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "udp": {
            "type": "string"
        },
        "name": {
            "type": "string"
        }
    },
    "resources": [{
        "apiVersion": "2016-09-01",
        "name": "UbuntuServer",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'virtualMachines.json')]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "name": {
                    "value": "[parameters('name')]"
                },
                "osDiskType": {
                    "value": "Managed"
                },
                "osProfileType": {
                    "value": "Linux"
                },
                "vmAdminUsername": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "VMAdminUsername"
                    }
                },
                "vmAdminPassword": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "VMAdminPassword"
                    }
                },
                "publisher": {
                    "value": "Canonical"
                },
                "offer": {
                    "value": "UbuntuServer"
                },
                "sku": {
                    "value": "16.10"
                }
            }
        }
    }]
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateSasToken": {
            "type": "securestring"
        },
        "udp": {
            "type": "string"
        },
        "timestamp": {
            "type": "string"
        },
        "computeVmShutdownStatus": {
            "type": "string"
        },
        "computeVmShutdownTime": {
            "type": "string"
        },
        "octopusDscJobId": {
            "type": "string"
        },
        "octopusDscConfiguration": {
            "type": "string"
        },
        "octopusDscConfigurationData": {
            "type": "string"
        },
        "octopusDscNodeName": {
            "type": "string"
        },
        "octopusDscConnectionString": {
            "type": "string"
        },
        "octopusDscHostName": {
            "type": "string"
        },
        "octopusCustomScriptLogFile": {
            "type": "string"
        }
    },
    "variables": {
        "templateBaseUrl": "[concat('https://stackresources',parameters('udp'),'.blob.core.windows.net')]"
    },
    "resources": [{
        "apiVersion": "2016-09-01",
        "name": "Infrastructure",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/infrastructure.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "templateSasToken": {
                    "value": "[parameters('templateSasToken')]"
                },
                "udp": {
                    "value": "[parameters('udp')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "VSTS",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/vsts.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "accountName": {
                    "value": "[parameters('templateSasToken')]"
                },
                "projectName": {
                    "value": "[parameters('udp')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "OctopusDeploy",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/octopusdeploy.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "timestamp": {
                    "value": "[parameters('timestamp')]"
                },
                "computeVmShutdownStatus": {
                    "value": "[parameters('computeVmShutdownStatus')]"
                },
                "computeVmShutdownTime": {
                    "value": "[parameters('computeVmShutdownTime')]"
                },
                "octopusDscJobId": {
                    "value": "[parameters('octopusDscJobId')]"
                },
                "octopusDscConfiguration": {
                    "value": "[parameters('octopusDscConfiguration')]"
                },
                "octopusDscConfigurationData": {
                    "value": "[parameters('octopusDscConfigurationData')]"
                },
                "octopusDscNodeName": {
                    "value": "[parameters('octopusDscNodeName')]"
                },
                "octopusDscConnectionString": {
                    "value": "[parameters('octopusDscConnectionString')]"
                },
                "octopusDscHostName": {
                    "value": "[parameters('octopusDscHostName')]"
                },
                "octopusCustomScriptLogFile": {
                    "value": "[parameters('octopusCustomScriptLogFile')]"
                }
            }
        }
    }]
}
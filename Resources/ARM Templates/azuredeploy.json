{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateSasToken": {
            "type": "securestring"
        },
        "udp": {
            "type": "string"
        },
        "timestamp": {
            "type": "string"
        },
        "computeVmShutdownStatus": {
            "type": "string"
        },
        "computeVmShutdownTime": {
            "type": "string"
        },
        "octopusDscJobId": {
            "type": "string"
        },
        "octopusDscConfiguration": {
            "type": "string"
        },
        "octopusDscConfigurationData": {
            "type": "string"
        },
        "octopusDscNodeName": {
            "type": "string"
        },
        "octopusDscConnectionString": {
            "type": "string"
        },
        "octopusDscHostName": {
            "type": "string"
        },
        "octopusCustomScriptLogFile": {
            "type": "string"
        }
    },
    "variables": {
        "templateBaseUrl": "[concat('https://stackresources',parameters('udp'),'.blob.core.windows.net')]",
        "automationName": "[concat('automation-', parameters('udp'))]",
        "sqlServerName": "[concat('azuresql-', parameters('udp'))]",
        "octopusVmName": "OctopusVM",
        "storageAccountName": "[concat('stackresources', parameters('udp'))]"
    },
    "resources": [{
        "apiVersion": "2016-09-01",
        "name": "AutomationAccounts",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Infrastructure/automationAccounts.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "automationName": {
                    "value": "[variables('automationName')]"
                },
                "octopusAutomationCredentialUsername": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "OctopusAutomationCredentialUsername"
                    }
                },
                "octopusAutomationCredentialPassword": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "OctopusAutomationCredentialPassword"
                    }
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "OctopusDeployAutomation",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "Microsoft.Resources/deployments/AutomationAccounts"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Automation/OctopusDeploy.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "jobId": {
                    "value": "[parameters('octopusDscJobId')]"
                },
                "configuration": {
                    "value": "[parameters('octopusDscConfiguration')]"
                },
                "configurationData": {
                    "value": "[parameters('octopusDscConfigurationData')]"
                },
                "octopusNodeName": {
                    "value": "[parameters('octopusDscNodeName')]"
                },
                "octopusConnectionString": {
                    "value": "[parameters('octopusDscConnectionString')]"
                },
                "octopusHostName": {
                    "value": "[parameters('octopusDscHostName')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "NetworkSecurityGroups",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Infrastructure/networkSecurityGroups.json'), parameters('templateSasToken'))]"
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "SqlServers",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Infrastructure/sqlServers.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "sqlServerName": {
                    "value": "[variables('sqlServerName')]"
                },
                "sqlAdminUsername": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "SqlAdminUsername"
                    }
                },
                "sqlAdminPassword": {
                    "reference": {
                        "keyVault": {
                            "id": "[concat(resourceGroup().id, '/providers/Microsoft.KeyVault/vaults/keyvault-', parameters('udp'))]"
                        },
                        "secretName": "SqlAdminPassword"
                    }
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "VirtualNetworks",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Infrastructure/virtualNetworks.json'), parameters('templateSasToken'))]"
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "OctopusDeployCompute",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "Microsoft.Resources/deployments/SqlServers"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Compute/OctopusDeploy.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "templateSasToken": {
                    "value": "[parameters('templateSasToken')]"
                },
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "timestamp": {
                    "value": "[parameters('timestamp')]"
                },
                "computeVmShutdownStatus": {
                    "value": "[parameters('computeVmShutdownStatus')]"
                },
                "computeVmShutdownTime": {
                    "value": "[parameters('computeVmShutdownTime')]"
                }
            }
        }
    }, {
        "apiVersion": "2016-09-01",
        "name": "OctopusDeployConfiguration",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "Microsoft.Resources/deployments/OctopusDeployAutomation",
            "Microsoft.Resources/deployments/OctopusDeployCompute"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(uri(variables('templateBaseUrl'), '/arm/Compute/extensions/CustomScript.Windows.json'), parameters('templateSasToken'))]"
            },
            "parameters": {
                "udp": {
                    "value": "[parameters('udp')]"
                },
                "vmName": {
                    "value": "[variables('octopusVmName')]"
                },
                "fileUris": {
                    "value": [
                        "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/scripts/OctopusDeploy/OctopusImport.ps1')]",
                        "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/scripts/Shared/AutomationNodeCompliance.ps1')]",
                        "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/scripts/Shared/CustomScriptLogging.ps1')]",
                        "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/scripts/OctopusDeploy.ps1')]"
                    ]
                },
                "scriptFileName": {
                    "value": "OctopusDeploy.ps1"
                },
                "scriptParameters": {
                    "value": "[concat('-LogFileName \"', parameters('octopusCustomScriptLogFile'), '\" -StorageAccountName \"', variables('storageAccountName'), '\" -StorageAccountKey \"', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value, '\"')]"
                }
            }
        }
    }]
}
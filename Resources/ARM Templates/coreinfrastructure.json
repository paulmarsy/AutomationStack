{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "udp": {
            "type": "string"
        },
        "servicePrincipalObjectId": {
            "type": "string"
        },
        "adminUserObjectId": {
            "type": "string"
        }
    },
    "variables": {
        "automationName": "[concat('automation-', parameters('udp'))]",
        "keyVaultName": "[concat('keyvault-', parameters('udp'))]",
        "resourcesStorageName": "[concat('stackresources', parameters('udp'))]"
    },
    "resources": [{
        "apiVersion": "2015-10-31",
        "type": "Microsoft.Automation/automationAccounts",
        "name": "[variables('automationName')]",
        "tags": "[resourceGroup().tags]",
        "location": "westeurope",
        "properties": {
            "sku": {
                "name": "Free"
            }
        }
    }, {
        "type": "Microsoft.KeyVault/vaults",
        "name": "[variables('keyVaultName')]",
        "tags": "[resourceGroup().tags]",
        "apiVersion": "2015-06-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "enabledForDeployment": false,
            "enabledForTemplateDeployment": true,
            "enabledForVolumeEncryption": true,
            "tenantId": "[subscription().tenantId]",
            "accessPolicies": [{
                "tenantId": "[subscription().tenantId]",
                "objectId": "[parameters('servicePrincipalObjectId')]",
                "permissions": {
                    "keys": ["create", "decrypt", "encrypt", "get", "sign", "unwrapKey", "verify", "wrapKey"],
                    "secrets": ["get", "set"]
                }
            }, {
                "tenantId": "[subscription().tenantId]",
                "objectId": "[parameters('adminUserObjectId')]",
                "permissions": {
                    "keys": ["all"],
                    "secrets": ["all"]
                }
            }],
            "sku": {
                "name": "Standard",
                "family": "A"
            }
        }
    }, {
        "apiVersion": "2016-12-01",
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('resourcesStorageName')]",
        "tags": "[resourceGroup().tags]",
        "location": "[resourceGroup().location]",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "kind": "Storage",
        "properties": {
            "encryption": {
                "keySource": "Microsoft.Storage",
                "services": {
                    "blob": {
                        "enabled": true
                    }
                }
            }
        }
    }],
    "outputs": {
        "KeyVaultId": {
            "type": "string",
            "value": "[resourceId('Microsoft.KeyVault/vaults',variables('keyVaultName'))]"
        },
        "vaultUri": {
            "type": "string",
            "value": "[reference(variables('keyVaultName')).vaultUri]"
        }
    }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePrincipalObjectId": {
            "type": "string"
        },
        "azureUserObjectId": {
            "type": "string"
        }
    },
    "variables": {
        "automationName": "[concat('automation-', resourceGroup().tags.udp)]",
        "keyVaultName": "[concat('keyvault-', resourceGroup().tags.udp)]",
        "storageAccountName": "[concat('stackresources', resourceGroup().tags.udp)]"
    },
    "resources": [{
            "apiVersion": "2015-10-31",
            "type": "Microsoft.Automation/automationAccounts",
            "name": "[variables('automationName')]",
            "tags": "[resourceGroup().tags]",
            "location": "West Europe",
            "properties": {
                "sku": {
                    "name": "Free"
                }
            }
            }, {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('keyVaultName')]",
            "tags": "[resourceGroup().tags]",
            "apiVersion": "2015-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [{
                    "tenantId": "[subscription().tenantId]",
                    "objectId": "[parameters('servicePrincipalObjectId')]",
                    "permissions": {
                        "keys": ["create", "decrypt", "encrypt", "get", "sign", "unwrapKey", "verify", "wrapKey"],
                        "secrets": ["get", "set"]
                    }
                }, {
                    "tenantId": "[subscription().tenantId]",
                    "objectId": "[parameters('azureUserObjectId')]",
                    "permissions": {
                        "keys": ["all"],
                        "secrets": ["all"]
                    }
                }],
                "sku": {
                    "name": "Standard",
                    "family": "A"
                }
            }
        },
        {
            "apiVersion": "2016-12-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "tags": "[resourceGroup().tags]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "keyVaultResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.KeyVault/vaults',variables('keyVaultName'))]"
        }
    }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "startTemplateDeploymentRunbookUri": {
            "type": "securestring"
        },
        "infrastructureRunbookUri": {
            "type": "securestring"
        },
        "servicePrincipalCertificateValue": {
            "type": "securestring"
        },
        "servicePrincipalCertificateThumbprint": {
            "type": "string"
        },
        "servicePrincipalApplicationId": {
            "type": "string"
        },
        "servicePrincipalObjectId": {
            "type": "string"
        },
        "azureUserObjectId": {
            "type": "string"
        }
    },
    "variables": {
        "automationName": "[concat('automation-', resourceGroup().tags.udp)]",
        "automationLocation": "West Europe",
        "keyVaultName": "[concat('keyvault-', resourceGroup().tags.udp)]",
        "storageAccountName": "[concat('stackresources', resourceGroup().tags.udp)]"
    },
    "resources": [{
            "apiVersion": "2015-10-31",
            "type": "Microsoft.Automation/automationAccounts",
            "name": "[variables('automationName')]",
            "tags": "[resourceGroup().tags]",
            "location": "[variables('automationLocation')]",
            "properties": {
                "sku": {
                    "name": "Free"
                }
            },
            "resources": [{
                "name": "AzureRunAsCertificate",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "certificates",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]"
                ],
                "properties": {
                    "base64Value": "[parameters('servicePrincipalCertificateValue')]",
                    "thumbprint": "[parameters('servicePrincipalCertificateThumbprint')]",
                    "isExportable": true
                }
            }, {
                "name": "AzureRunAsConnection",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "connections",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]"
                ],
                "properties": {
                    "name": "AzureRunAsConnection",
                    "fieldDefinitionValues": {
                        "CertificateThumbprint": "[parameters('servicePrincipalCertificateThumbprint')]",
                        "ApplicationId": "[parameters('servicePrincipalApplicationId')]",
                        "SubscriptionId": "[subscription().subscriptionId]",
                        "TenantId": "[subscription().tenantId]"
                    },
                    "connectionType": {
                        "name": "AzureServicePrincipal"
                    }
                }
            }, {
                "name": "ResourceGroupName",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "variables",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]"
                ],
                "properties": {
                    "type": "string",
                    "value": "[concat('\"', resourceGroup().name,'\"')]"
                }
            }, {
                "name": "StorageAccountName",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "variables",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]"
                ],
                "properties": {
                    "type": "string",
                    "value": "[concat('\"', variables('storageAccountName'),'\"')]"
                }
            }, {
                "name": "StartTemplateDeployment",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "runbooks",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]"
                ],
                "properties": {
                    "runbookType": "PowerShell",
                    "state": "Published",
                    "publishContentLink": {
                        "uri": "[parameters('startTemplateDeploymentRunbookUri')]"
                    }
                }
            }, {
                "name": "DeployInfrastructure",
                "apiVersion": "2015-10-31",
                "tags": "[resourceGroup().tags]",
                "type": "runbooks",
                "location": "[variables('automationLocation')]",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'))]",
                    "[concat('Microsoft.Automation/automationAccounts/',variables('automationName'), '/runbooks/StartTemplateDeployment')]"
                ],
                "properties": {
                    "runbookType": "PowerShell",
                    "state": "Published",
                    "logProgress": "true",
                    "logVerbose": "true",
                    "publishContentLink": {
                        "uri": "[parameters('infrastructureRunbookUri')]"
                    }
                }
            }]
        }, {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('keyVaultName')]",
            "tags": "[resourceGroup().tags]",
            "apiVersion": "2015-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [{
                    "tenantId": "[subscription().tenantId]",
                    "objectId": "[parameters('servicePrincipalObjectId')]",
                    "permissions": {
                        "keys": ["create", "decrypt", "encrypt", "get", "sign", "unwrapKey", "verify", "wrapKey"],
                        "secrets": ["get", "set"]
                    }
                }, {
                    "tenantId": "[subscription().tenantId]",
                    "objectId": "[parameters('azureUserObjectId')]",
                    "permissions": {
                        "keys": ["all"],
                        "secrets": ["all"]
                    }
                }],
                "sku": {
                    "name": "Standard",
                    "family": "A"
                }
            }
        },
        {
            "apiVersion": "2016-12-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "tags": "[resourceGroup().tags]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "keyVaultResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.KeyVault/vaults',variables('keyVaultName'))]"
        }
    }
}